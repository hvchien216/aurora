model Link {
  id         String    @id @default(cuid())
  key        String
  url        String
  archived   Boolean   @default(false)
  expiresAt  DateTime? @map("expires_at") // when the link expires â€“ stored on Redis via ttl
  expiredUrl String?   @map("expired_url") // URL to redirect the user to when the link is expired

  title       String?
  description String?
  image       String?
  video       String?

  comment String?

  clicks      Int       @default(0) @map("clicks")
  lastClicked DateTime? @map("last_clicked")

  // User who created the link
  userId String? @map("user_id")
  user   User?   @relation(fields: [userId], references: [id])

  // Workspace that the link belongs to
  workspaceId String?    @map("workspace_id")
  workspace   Workspace? @relation(fields: [workspaceId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Link tags
  tags LinksTags[]

  @@map("links")
}
